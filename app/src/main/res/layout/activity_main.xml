<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/darkgreen"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">


    <View
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:background="@drawable/ic_rectangle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_marginTop="139dp"
        android:layout_marginLeft="32dp"
        app:circularflow_radiusInDP="12"/>

    <TextView
        android:layout_width="209dp"
        android:layout_height="53dp"
        android:layout_marginLeft="2dp"
        android:text="Hello!"
        android:lineHeight="49.22dp"
        android:textColor="@color/white"
        android:textSize="42sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="169dp" />


    <TextView
        android:layout_width="295dp"
        android:layout_height="41dp"
        android:text="lets introduce"
        android:textColor="@color/gray"
        android:textSize="24sp"
        android:lineHeight="28.13dp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="2dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="245dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="45dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="313dp">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_bg_"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_person"
            app:tint="@color/lightyellow" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:hint="Your full name"

            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/lightgray"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="408dp">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_bg_"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_person"
            app:tint="@color/lightyellow" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:hint="Username"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/lightgray"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="245dp"
        android:layout_height="58dp"
        app:circularflow_radiusInDP="12"
        android:background="@drawable/ic_base_big"
        android:src="@drawable/ic_baseline_arrow_right"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="504dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="522dp" />

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:circularflow_radiusInDP="12"
        android:background="@drawable/ic_base__"
        android:src="@drawable/ic_baseline_arrow_left"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="504dp" />

</androidx.constraintlayout.widget.ConstraintLayout>